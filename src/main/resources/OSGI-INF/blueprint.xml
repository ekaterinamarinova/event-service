<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns='http://www.osgi.org/xmlns/blueprint/v1.0.0'>

        <service  ref="logging" interface="definition.service.LoggingService" />
        <service  ref="monitoring" interface="definition.service.MonitoringService" />
        <service  ref="retrieve" interface="definition.service.RetrievingService" />

        <bean id="monitoring" class="service.MonitoringServiceImpl"/>
        <bean id="retrieve" class="service.RetrievingServiceImpl"/>
        <bean id="logging" class="service.LoggingServiceImpl">
                <argument ref="monitoring"/>
        </bean>

</blueprint>