<?xml version="1.0" encoding="UTF-8"?>
<blueprint xmlns='http://www.osgi.org/xmlns/blueprint/v1.0.0'>

    <reference id="loggingRef" interface="definition.service.LoggingService" />
    <reference id = "monitoringRef" interface="definition.service.MonitoringService" />
    <reference id = "retrievingRef" interface="definition.service.RetrievingService" />

    <bean id="monitoring" class="service.MonitoringServiceImpl"/>
    <bean id="retrieve" class="service.RetrievingServiceImpl"/>
    <bean id="logging" class="service.LoggingServiceImpl" >
        <argument ref="monitoringRef"/>
    </bean>

    <service ref="loggingRef"/>
    <service ref="monitoringRef"/>
    <service ref="retrievingRef"/>

</blueprint>